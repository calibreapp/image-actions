{
  "name": "image-actions",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "entrypoint.ts",
  "author": "Calibre <hello@calibreapp.com>",
  "license": "ISC",
  "scripts": {
    "test": "GITHUB_WORKSPACE=__tests__/test-images vitest run",
    "test:watch": "GITHUB_WORKSPACE=__tests__/test-images vitest",
    "test:docker": "docker compose -f docker-compose.test.yml build && docker compose -f docker-compose.test.yml run test",
    "docker:build": "docker build . --tag image-actions:latest",
    "format": "prettier --write **/*.{js,ts}",
    "format-check": "prettier --check **/*.{js,ts}",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test && npm run test:docker"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/action": "^8.0.2",
    "ejs": "^3.1.10",
    "glob": "^11.0.3",
    "p-throttle": "^8.0.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@octokit/types": "^14.1.0",
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
